<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.village.revive.mapper.ForumCommentMapper">
    
    <!-- 结果映射 -->
    <resultMap id="ForumCommentDTOMap" type="com.village.revive.dto.ForumCommentDTO">
        <id column="id" property="id"/>
        <result column="post_id" property="postId"/>
        <result column="user_id" property="userId"/>
        <result column="parent_id" property="parentId"/>
        <result column="content" property="content"/>
        <result column="images" property="images"/>
        <result column="like_count" property="likeCount"/>
        <result column="status" property="status"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
        <result column="username" property="username"/>
        <result column="real_name" property="realName"/>
        <result column="user_avatar" property="userAvatar"/>
        <result column="status_desc" property="statusDesc"/>
        <result column="is_liked" property="isLiked"/>
    </resultMap>

    <!-- 基础查询字段 -->
    <sql id="BaseColumns">
        fc.id, fc.post_id, fc.user_id, fc.parent_id, fc.content, fc.images,
        fc.like_count, fc.status, fc.created_at, fc.updated_at,
        u.username, u.real_name, u.avatar as user_avatar
    </sql>

    <!-- 状态描述映射 -->
    <sql id="StatusDesc">
        CASE fc.status
            WHEN 0 THEN '待审核'
            WHEN 1 THEN '已通过'
            WHEN 2 THEN '已拒绝'
            ELSE '未知'
        END as status_desc
    </sql>

    <!-- 点赞状态 -->
    <sql id="LikedStatus">
        CASE WHEN fcl.id IS NOT NULL THEN 1 ELSE 0 END as is_liked
    </sql>

    <!-- 查询条件 -->
    <sql id="QueryConditions">
        <where>
            <if test="query.postId != null">
                fc.post_id = #{query.postId}
            </if>
            <if test="query.userId != null">
                AND fc.user_id = #{query.userId}
            </if>
            <if test="query.parentId != null">
                AND fc.parent_id = #{query.parentId}
            </if>
            <if test="query.status != null">
                AND fc.status = #{query.status}
            </if>
            <if test="query.keyword != null and query.keyword != ''">
                AND fc.content LIKE CONCAT('%', #{query.keyword}, '%')
            </if>
        </where>
    </sql>

    <!-- 排序条件 -->
    <sql id="OrderBy">
        ORDER BY
        <choose>
            <when test="query.sortField == 'like_count'">
                fc.like_count
            </when>
            <otherwise>
                fc.created_at
            </otherwise>
        </choose>
        <choose>
            <when test="query.sortOrder == 'desc'">
                DESC
            </when>
            <otherwise>
                ASC
            </otherwise>
        </choose>
    </sql>

    <!-- 分页查询评论列表 -->
    <select id="selectCommentsWithUserInfo" resultMap="ForumCommentDTOMap">
        SELECT
        <include refid="BaseColumns"/>,
        <include refid="StatusDesc"/>,
        <include refid="LikedStatus"/>
        FROM forum_comments fc
        LEFT JOIN users u ON fc.user_id = u.id
        LEFT JOIN forum_comment_likes fcl ON fc.id = fcl.comment_id AND fcl.user_id = #{currentUserId}
        <include refid="QueryConditions"/>
        <include refid="OrderBy"/>
    </select>

    <!-- 根据帖子ID查询评论列表 -->
    <select id="selectCommentsByPostId" resultMap="ForumCommentDTOMap">
        SELECT
        <include refid="BaseColumns"/>,
        <include refid="StatusDesc"/>,
        <include refid="LikedStatus"/>
        FROM forum_comments fc
        LEFT JOIN users u ON fc.user_id = u.id
        LEFT JOIN forum_comment_likes fcl ON fc.id = fcl.comment_id AND fcl.user_id = #{currentUserId}
        WHERE fc.post_id = #{postId} AND fc.status = 1
        ORDER BY fc.created_at ASC
    </select>

    <!-- 根据父评论ID查询回复列表 -->
    <select id="selectRepliesByParentId" resultMap="ForumCommentDTOMap">
        SELECT
        <include refid="BaseColumns"/>,
        <include refid="StatusDesc"/>,
        <include refid="LikedStatus"/>
        FROM forum_comments fc
        LEFT JOIN users u ON fc.user_id = u.id
        LEFT JOIN forum_comment_likes fcl ON fc.id = fcl.comment_id AND fcl.user_id = #{currentUserId}
        WHERE fc.parent_id = #{parentId} AND fc.status = 1
        ORDER BY fc.created_at ASC
    </select>

    <!-- 根据ID查询评论详情 -->
    <select id="selectCommentWithUserInfoById" resultMap="ForumCommentDTOMap">
        SELECT
        <include refid="BaseColumns"/>,
        <include refid="StatusDesc"/>,
        <include refid="LikedStatus"/>
        FROM forum_comments fc
        LEFT JOIN users u ON fc.user_id = u.id
        LEFT JOIN forum_comment_likes fcl ON fc.id = fcl.comment_id AND fcl.user_id = #{currentUserId}
        WHERE fc.id = #{id}
    </select>

    <!-- 更新点赞数 -->
    <update id="updateLikeCount">
        UPDATE forum_comments 
        SET like_count = like_count + #{count} 
        WHERE id = #{id}
    </update>

    <!-- 根据帖子ID统计评论数 -->
    <select id="countByPostId" resultType="long">
        SELECT COUNT(*) 
        FROM forum_comments 
        WHERE post_id = #{postId} AND status = 1
    </select>
    
    <!-- 删除评论相关的点赞记录 -->
    <delete id="deleteCommentLikes">
        DELETE FROM forum_comment_likes WHERE comment_id = #{commentId}
    </delete>

</mapper>
