<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.village.revive.mapper.ProductCategoryMapper">

    <!-- 获取启用的分类列表，按排序值排序 -->
    <select id="selectEnabledCategories" resultType="com.village.revive.entity.ProductCategory">
        SELECT * FROM product_categories 
        WHERE status = 1
        ORDER BY sort_order ASC, created_at ASC
    </select>

    <!-- 根据状态查询分类列表 -->
    <select id="selectByStatus" resultType="com.village.revive.entity.ProductCategory">
        SELECT * FROM product_categories 
        WHERE status = #{status}
        ORDER BY sort_order ASC, created_at ASC
    </select>

</mapper>
